generator client {
  provider = "prisma-client-js"
}
datasource db {
  provider = "mysql"
  url = env("DATABASE_URL")
  relationMode = "prisma"
}

model Camp {
  id                      Int       @id @default(autoincrement())
  campImage               String
  campName                String
  campDescription         String
  campLocation            String
  bookingPrice            String
  campRating              Int
  campPromotion           Boolean   @default(false)
  campPromotionRating     Int
  campFeeDescription      String
  campMode                CampMode  @default(EASY)
  booking                 Booking[]
  campFacility            Boolean
  service                 Service[]
  rentalEquipment         Boolean
  wifi                    Boolean
  phoneSignal             Boolean 
  electricity             Boolean
  toilet                  Boolean
  suitBestFor             SuitBestFor @default(GROUP)
}


model BananaPoint {
  id              Int    @id @default(autoincrement())
  itemImage       String
  itemName        String
  itemBananaPoint Int
  itemDescription String
}

model User {
  id          Int       @id @default(autoincrement())
  userId      String    @unique
  userImage   String
  userName    String
  bananaPoint String
  Booking     Booking?
}

model Booking {
  id     Int  @id @default(autoincrement())
  User User @relation(fields: [userId], references: [id])
  userId Int @unique 
  Camp Camp @relation(fields: [campId], references: [id])
  campId Int  
  campAmount Int
  startDate String 
  endDate String 
  phoneNumber String
  name String
  age String
  birthDate String
  email String
  address String
  
  @@index([userId])
  @@index([campId])
}

model Service {
  id                 Int          @id @default(autoincrement())
  camp               Camp         @relation(fields: [campId], references: [id])
  campId             Int          
  serviceImage       String
  serviceName        String
  serviceCategory    CampCategory @default(FOOD)
  serviceDescription String
  serviceContact     String
  serviceLineContact String?
  serviceDistance    String

  @@index([campId])
}

enum CampMode {
  EASY
  MEDIUM
  HARD
}

enum CampCategory {
  FOOD
  STORE
  BEVERAGE
}

enum SuitBestFor {
  GROUP
  LOVER
  FRIEND
}
